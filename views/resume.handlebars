{{#section "head"}}
<style>
  body {
    font-family: Arial, sans-serif;
    background: #f7f8fa;
    color: #1f2937;
    margin: 0;
    padding: 1rem;
  }

  header, main, footer {
    max-width: 850px;
    margin: 0 auto;
  }

  header {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    padding: 1rem 1.25rem;
    margin-bottom: 0.9rem;
  }

  header h1 {
    margin: 0;
    font-size: 1.6rem;
  }

  header p {
    margin: 0.35rem 0 0;
    color: #4b5563;
  }

  main {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    padding: 1rem 1.25rem;
  }

  section {
    margin-bottom: 1rem;
  }

  h2 {
    margin: 0 0 0.45rem;
    font-size: 1.05rem;
    border-bottom: 1px solid #f0f2f5;
    padding-bottom: 0.35rem;
  }

  p {
    margin: 0.25rem 0;
    line-height: 1.5;
  }

  ul {
    margin: 0.35rem 0 0;
    padding-left: 1.15rem;
  }

  li {
    margin: 0.25rem 0;
  }

  footer {
    color: #6b7280;
    font-size: 0.92rem;
    margin-top: 0.8rem;
    text-align: center;
  }
</style>
{{/section}}

<section>
  <h2>Summary</h2>
  <p>{{summary}}</p>
</section>

<section>
  <h2>Education</h2>
  {{#if education.length}}
    <ul>
      {{#each education}}
        <li>{{program}} at {{school}} ({{year}})</li>
      {{/each}}
    </ul>
  {{else}}
    <p>No education listed yet.</p>
  {{/if}}
</section>

<section>
  <h2>Experience</h2>
  <ul>
    {{#each experiences}}
      <li>
        <strong>{{role}}</strong> - {{company}} ({{period}})<br>
        {{details}}
      </li>
    {{/each}}
  </ul>
</section>

<section>
  <h2>Skills</h2>
  <ul>
    {{#each skills}}
      {{> skills}}
    {{/each}}
  </ul>
</section>

<section>
  <h2>Projects</h2>
  {{#if projects.length}}
    <ul>
      {{#each projects}}
        {{#if name}}
          <li><strong>{{name}}</strong> - {{description}}</li>
        {{else}}
          <li>{{this}}</li>
        {{/if}}
      {{/each}}
    </ul>
  {{else}}
    <p>No projects listed yet.</p>
  {{/if}}
</section>

<section>
  <h2>Status</h2>
  {{#if showOpenToWork}}
    <p>Currently Unemployed.</p>
  {{else}}
    <p>Currently Employed.</p>
  {{/if}}
  {{#unless hobbies.length}}
    <p>No hobbies listed.</p>
  {{else}}
    <h2>Hobbies:</h2>
    <ul>
      {{#each hobbies}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/unless}}
</section>
